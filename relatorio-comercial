#include "protheus.ch"

/*-----------------------------------------------------------
  Function: FrmCli01()
  Description: Rotina para cadastro de clientes
  Author: [Seu nome]
  Date: [Data]
  Param: N/A
  Return: N/A
-----------------------------------------------------------*/
User Function FrmCli01()
    Local aHeader := {} // Array para os campos da tela
    Local cTitulo := "Cadastro de Clientes"
    Local lOk := .F.

    // Define os campos da interface (View)
    aAdd(aHeader, {"A1_COD", "Código", "C", 6, 0})
    aAdd(aHeader, {"A1_NOME", "Nome", "C", 40, 0})
    aAdd(aHeader, {"A1_END", "Endereço", "C", 40, 0})

    // Cria a View e passa a responsabilidade para o Controller
    lOk := AdoView(cTitulo, aHeader)

    // Se o usuário clicou em OK, processa o Model
    If lOk
        MsgInfo("Dados gravados com sucesso!", "Protheus")
        // Aqui você chamaria sua função para gravar no banco de dados
        // Por exemplo: GravaDados(aDados)
    EndIf

Return
